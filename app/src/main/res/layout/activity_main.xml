<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/canvasContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settingContainer">
            <Button
                android:id="@+id/saveBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/img_download" />

            <Button
                android:id="@+id/loadBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/img_load" />

            <Button
                android:id="@+id/colorBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/img_color_pick" />

            <Button
                android:id="@+id/eraserBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/img_eraser" />

            <Button
                android:id="@+id/backBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_baseline_keyboard_arrow_left_24"
                android:backgroundTint="#000000"
                android:drawableTint="#000000" />
            <Button
                android:id="@+id/forwardBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/img_forward"
                android:backgroundTint="#000" />
            <Button
                android:id="@+id/btn_pen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/img_pen"
                android:backgroundTint="#000000"
                android:drawableTint="#000000" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/screenBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/img_fullscreen"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>